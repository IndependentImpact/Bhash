@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix hedera: <https://hashgraphontology.xyx/hedera/core/> .
@prefix impactont: <https://datadudes.xyz/ontology/impactont#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<https://hashgraphontology.xyx/hedera/alignment/impactont> a owl:Ontology ;
    dcterms:created "2025-10-01"^^xsd:date ;
    dcterms:creator "Bhash Ontology Working Group"@en ;
    dcterms:description "Connects Hedera treasury and compliance analytics to ImpactOnt KPI structures for sustainability dashboards."@en ;
    dcterms:modified "2025-10-01"^^xsd:date ;
    dcterms:title "ImpactOnt alignment module"@en ;
    owl:imports <https://hashgraphontology.xyx/hedera/core>,
        <https://hashgraphontology.xyx/hedera/mirror-analytics>,
        <https://hashgraphontology.xyx/hedera/token> ;
    owl:versionInfo "0.1.0-dev" ;
    skos:editorialNote "Phase 4 bridge module translating Hedera compliance metrics into ImpactOnt KPI and SDG linkages."@en .

hedera:ComplianceAlignmentScore a owl:Class ;
    rdfs:label "Compliance alignment score"@en ;
    dcterms:source <https://datadudes.xyz/impactont#ComplianceIndicator> ;
    rdfs:subClassOf impactont:ComplianceIndicator,
        hedera:TelemetryMetric ;
    skos:definition "Composite indicator evaluating adherence to sustainability-linked compliance rules."@en ;
    hedera:sourceDocument <https://hips.hedera.com/hip/hip-540> .

hedera:TreasuryImpactKPI a owl:Class ;
    rdfs:label "Treasury impact KPI"@en ;
    dcterms:source <https://datadudes.xyz/impactont#KPI> ;
    rdfs:subClassOf impactont:KPI,
        hedera:TelemetryMetric ;
    skos:definition "Metric summarising treasury-controlled token balances for sustainability reporting."@en ;
    hedera:sourceDocument <https://docs.hedera.com/hedera/mirror-node/architecture/metrics> .

hedera:alignsWithPolicy a owl:ObjectProperty ;
    rdfs:label "aligns with policy"@en ;
    dcterms:source <https://datadudes.xyz/impactont#supportedByPolicy> ;
    rdfs:domain hedera:TelemetryMetric ;
    rdfs:range impactont:PolicyInstrument ;
    rdfs:subPropertyOf impactont:supportedByPolicy ;
    skos:definition "States which policy instrument governs the sustainability KPI."@en ;
    hedera:sourceDocument <https://hips.hedera.com/hip/hip-540> .

hedera:hasImpactBaseline a owl:DatatypeProperty ;
    rdfs:label "has impact baseline"@en ;
    dcterms:source <https://datadudes.xyz/impactont#hasBaselineValue> ;
    rdfs:domain hedera:TelemetryMetric ;
    rdfs:range xsd:decimal ;
    rdfs:subPropertyOf impactont:hasBaselineValue ;
    skos:definition "Baseline quantitative value used for comparing KPI improvement."@en ;
    hedera:sourceDocument <https://docs.hedera.com/hedera/mirror-node/architecture/metrics> .

hedera:hasImpactVariance a owl:DatatypeProperty ;
    rdfs:label "has impact variance"@en ;
    dcterms:source <https://datadudes.xyz/impactont#hasVariance> ;
    rdfs:domain hedera:TelemetryMetric ;
    rdfs:range xsd:decimal ;
    rdfs:subPropertyOf impactont:hasVariance ;
    skos:definition "Captures the variance observed for an impact KPI across a reporting period."@en ;
    hedera:sourceDocument <https://docs.hedera.com/hedera/mirror-node/architecture/metrics> .

hedera:hasMetricValue a owl:DatatypeProperty ;
    rdfs:label "has metric value"@en ;
    dcterms:source <https://datadudes.xyz/impactont#hasMetricValue> ;
    rdfs:domain hedera:TelemetryMetric ;
    rdfs:range xsd:decimal ;
    rdfs:subPropertyOf impactont:hasMetricValue ;
    skos:definition "Quantitative value reported for a Hedera-aligned impact metric."@en ;
    hedera:sourceDocument <https://docs.hedera.com/hedera/mirror-node/architecture/metrics> .

hedera:summarisesToken a owl:ObjectProperty ;
    rdfs:label "summarises token"@en ;
    dcterms:source <https://datadudes.xyz/impactont#measuresAsset> ;
    rdfs:domain hedera:TelemetryMetric ;
    rdfs:range hedera:Token ;
    rdfs:subPropertyOf impactont:measuresAsset ;
    skos:definition "Identifies the token whose balances underpin a KPI."@en ;
    hedera:sourceDocument <https://docs.hedera.com/hedera/sdks-and-apis/token-service/token-relationships> .

hedera:targetsSDGGoal a owl:ObjectProperty ;
    rdfs:label "targets SDG goal"@en ;
    dcterms:source <https://datadudes.xyz/impactont#targetsSDG> ;
    rdfs:domain hedera:TelemetryMetric ;
    rdfs:range impactont:SDGGoal ;
    rdfs:subPropertyOf impactont:targetsSDG ;
    skos:definition "Indicates which Sustainable Development Goal a Hedera metric supports."@en ;
    hedera:sourceDocument <https://docs.hedera.com/hedera/mirror-node/architecture/metrics> .

